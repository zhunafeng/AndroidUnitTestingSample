<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:divider="@drawable/divider"
        android:showDividers="middle|end|beginning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_left_padding"
            android:paddingRight="@dimen/activity_right_padding"
            android:paddingStart="@dimen/activity_left_padding"
            android:paddingEnd="@dimen/activity_right_padding"
            android:layout_height="@dimen/tab_height">

            <TextView
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/login_mobile"
                android:textSize="@dimen/textSize_16sp"
                android:textColor="@color/text_default"/>

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/textSize_16sp"
                android:hint="@string/login_mobile_hint"
                android:inputType="phone"
                android:maxLength="11"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/activity_left_padding"
            android:paddingRight="@dimen/activity_right_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height">

            <TextView
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_16sp"
                android:text="@string/login_identify"
                android:textColor="@color/text_default"/>

            <EditText
                android:id="@+id/et_identify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLength="6"
                android:textSize="@dimen/textSize_16sp"
                android:background="@null"
                android:hint="@string/login_identify_hint"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv_send_identify"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="right|end|center_vertical"
                android:textSize="@dimen/textSize_14sp"
                android:text="@string/login_send_identify"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:textSize="@dimen/textSize_18sp"
        android:textColor="@color/white"
        android:text="@string/login"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

</LinearLayout>

